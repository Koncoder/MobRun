<div class="header">
<header class="main-header">

  <center>
    <h1>MobRuns</h1>
    <%= link_to "+ new route", new_route_url, method: :get %>
    <%= link_to "+ new run", routes_url, method: :get %>
  </center>
</div>
</header>


<div class="container">
  <div class="row">
    <% @runs.each do |run| %>

      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card">

           <h2><%= run.route.name %></h2>
          <%= link_to "details", run_path(run) %>
            <p>
              <%= link_to run_path(run), method: :delete do %>
                <i class="fa fa-share-alt" aria-hidden="true"></i>
                <i class="fa fa-heart" aria-hidden="true"></i>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </p>
        </div>
      </div>

    <% end %>
  </div>
<div>
  <center>
<%= link_to "all routes", routes_path %>
  </center>
</div>
