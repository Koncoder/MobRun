<%= form_tag runs_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a run"
  %>

   <%= number_field_tag :lower_bound,
    params[:lower_bound],
    class: "form-control",
    placeholder: "Find a run"
  %>

   <%= number_field_tag :upper_bound,
    params[:upper_bound],
    class: "form-control",
    placeholder: "Find a run"
  %>

  <%= submit_tag "Searchy" %>

<% end %>


<div class="col-container">
  <div class="row">
    <% @runs.each do |run| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <a href='/runs/<%= run.id %>' class="run-details-link">
          <div class="card">
          <img class="card-img-top" src='https://images.unsplash.com/photo-1452626038306-9aae5e071dd3?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=1002f970f615e046c7c5376c46e13bef&auto=format&fit=crop&w=500&q=60' width="250" height="180" alt="Card image cap">
          <h3><%= run.route.name %></h3>
          <p><%= run.speed %> km/h</p>
          <p><%= run.start_time %></p>
          <p>
            <a href="#" class="fa fa-facebook"></a>
            <i class="fa fa-heart" aria-hidden="true" style="font-size:20px;color:red"></i>
            <%= link_to run_path(run), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </p>
        </div></a>
      </div>
    <% end %>
  </div>
</div>

