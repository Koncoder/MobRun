
<div class="header">
  <center>
    <h1>Create a New Run</h1>
  </center>
</div>


<div class="container">
  <div class="form-group col-xs-12 col-sm-offset-4 col-sm-4">
    <h1>Create a run</h1>
    <%= simple_form_for [@route, @run] do |f| %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.submit 'Add route' %>
    <% end %>
  </div>
<h1>Runs#new</h1>
<div class="form-group col-xs-12 col-sm-offset-4 col-sm-4">
  <h1>Create a run</h1>
  <%= simple_form_for [@route, @run] do |f| %>
    <%= f.input :start_time %>
    <%= f.input :speed %>
    <%#= f.input :end_time %>
    <%= f.submit 'Add route' %>
  <% end %>
</div>
