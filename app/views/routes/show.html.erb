<center><h1>Show Routes</h1></center>

<div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-lg-3">
      <%= link_to "run this route!", new_route_run_path(@route) %>
        <ul><h1>route details:</h1>
          <li>route id: <%= @route.id %> </li>
          <li>route name: <%= @route.name %></li>
          <li>route start point: <%= @route.start_point %> </li>
          <li>route end point: <%= @route.end_point %></li>
          <li>route total length: <%= @route.total_length %></li>
        </ul>
        <%= link_to "back to all routes", routes_path %>
    </div>
  </div>
</div>
